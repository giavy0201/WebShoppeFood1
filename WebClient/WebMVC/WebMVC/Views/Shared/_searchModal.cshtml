@inject IConfiguration Configuration
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header text-end d-flex justify-content-end">
                <button type="button" class="btn-close" id="close-modal" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-form-search">
                <img src='@Configuration["https:pathImgWeb"]/bg-search.png' class="img-fluid" alt="Alternate Text">
                <h5 class="text-white text-center mt-3">Đặt Đồ ăn, giao hàng từ 20'...</h5>
            </div>
            <div class="modal-footer">
                <form action="/Search/SearchPage" method="post" style="width:100%">
                    <div class="input-group mb-3">
                        <input type="text" name="keyword" class="form-control" placeholder="Tìm địa điểm, món ăn, địa chỉ..." aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-secondary" type="submit" id="button-addon2">Tìm Kiếm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>